{
  "extends": "airbnb",
  "rules": {
    "jsx-quotes": [
      2,
      "prefer-single"
    ],
    "react/jsx-curly-spacing": [
      2,
      "always"
    ],
    "react/prefer-stateless-function": [
      0
    ],
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ]
  }
}